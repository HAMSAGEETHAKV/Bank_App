<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Bank Account Management</display-name>
    
    <!-- Admin Login Servlet -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>servlet.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/adminLogin</url-pattern>
    </servlet-mapping>

    <!-- Customer Registration Servlet -->
    <servlet>
        <servlet-name>CustomerRegistrationServlet</servlet-name>
        <servlet-class>servlet.CustomerRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerRegistrationServlet</servlet-name>
        <url-pattern>/registerCustomer</url-pattern>
    </servlet-mapping>

    <!-- Customer Login Servlet -->
    <servlet>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <servlet-class>servlet.CustomerLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <url-pattern>/customerLogin</url-pattern>
    </servlet-mapping>
    
    <!-- Customer Dashboard Servlet -->
    <servlet>
        <servlet-name>CustomerDashboardServlet</servlet-name>
        <servlet-class>servlet.CustomerDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerDashboardServlet</servlet-name>
        <url-pattern>/customerDashboard</url-pattern>
    </servlet-mapping>
    
    <!-- Customer Transaction Servlet -->
    <servlet>
        <servlet-name>CustomerTransactionServlet</servlet-name>
        <servlet-class>servlet.CustomerTransactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerTransactionServlet</servlet-name>
        <url-pattern>/customerTransaction</url-pattern>
    </servlet-mapping>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>